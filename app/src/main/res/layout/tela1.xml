<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Tela1"
    tools:layout_editor_absoluteY="81dp">


    <TextView
        android:id="@+id/text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_alignLeft="@id/nome1"
        android:text="Nome:"
        android:textSize="30dp" />

    <EditText
        android:id="@+id/nome1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text1"
        android:layout_marginStart="40dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="3dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:textSize="30dp" />

    <TextView
        android:id="@+id/text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="5dp"
        android:layout_marginStart="5dp"
        android:layout_below="@id/nome1"
        android:layout_marginTop="50dp"
        android:text="Idade:"
        android:textSize="30dp" />

    <TextView
        android:id="@+id/text3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="5dp"
        android:layout_toRightOf="@id/text2"
        android:layout_alignTop="@id/text2"
        android:text="Peso (kg):"
        android:textSize="30dp" />

    <TextView
        android:id="@+id/text4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="5dp"
        android:layout_toRightOf="@id/text3"
        android:layout_alignTop="@id/text2"
        android:text="Altura (m):"
        android:textSize="30dp" />

    <Button
        android:id="@+id/b1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:layout_below="@id/idade1"
        android:onClick="navegaTela1p2"
        android:text="RelatÃ³rio Nutricional"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/idade1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_alignLeft="@id/text2"
        android:layout_alignRight="@id/text2"
        android:layout_below="@id/text2"
        android:ems="10"
        android:inputType="number"
        android:textSize="30dp" />

    <EditText
        android:id="@+id/peso1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/text3"
        android:layout_alignRight="@id/text3"
        android:layout_below="@id/text2"
        android:ems="10"
        android:inputType="numberDecimal"
        android:textSize="30dp" />

    <EditText
        android:id="@+id/altura1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/text4"
        android:layout_alignRight="@id/text4"
        android:layout_below="@id/text2"
        android:ems="10"
        android:inputType="numberDecimal"
        android:textSize="30dp" />

</RelativeLayout>
